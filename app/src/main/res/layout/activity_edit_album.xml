<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6FF00"
    tools:context=".EditAlbumActivity">

    <TextView
        android:id="@+id/AlbumEditAlbumNameDisplay"
        android:layout_width="342dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/rounded"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AlbumDeleteButton"
        android:layout_width="102dp"
        android:layout_height="53dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="260dp"
        android:backgroundTint="@color/manav"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BackToAlbumDisplayButton"
        android:layout_width="106dp"
        android:layout_height="54dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/manav"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/RenameAlbumButton"
        android:layout_width="105dp"
        android:layout_height="53dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="132dp"
        android:backgroundTint="@color/manav"
        android:text="Rename"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>