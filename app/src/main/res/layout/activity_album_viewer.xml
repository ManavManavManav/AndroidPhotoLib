<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6FF00"
    tools:context=".AlbumViewerActivity">

    <TextView
        android:id="@+id/showAlbumNameView"
        android:layout_width="165dp"
        android:layout_height="31dp"
        android:layout_marginTop="260dp"
        android:text="Album"
        app:layout_constraintTop_toBottomOf="@+id/AddImageButton"
        tools:layout_editor_absoluteX="123dp" />

    <ListView
        android:id="@+id/PhotoAlbumPageListView"
        android:layout_width="411dp"
        android:layout_height="320dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp" />


    <Button
        android:id="@+id/AddImageButton"
        android:layout_width="406dp"
        android:layout_height="53dp"
        android:layout_marginTop="336dp"
        android:text="Add"
        android:backgroundTint="@color/manav"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:id="@+id/AlbumViewBackButton"
        android:layout_width="134dp"
        android:layout_height="57dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="388dp"
        android:backgroundTint="@color/manav"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/EditAlbumButton"
        android:layout_width="141dp"
        android:layout_height="55dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="132dp"
        android:backgroundTint="@color/manav"
        android:clickable="true"
        android:text="Album Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchFilterButton"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="388dp"
        android:backgroundTint="@color/manav"
        android:text="Search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>