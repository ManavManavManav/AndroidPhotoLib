<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6FF00"
    tools:context=".EditTagActivity">

    <Button
        android:id="@+id/DeleteTagButton"
        android:layout_width="99dp"
        android:layout_height="51dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="124dp"
        android:text="Delete"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/manav"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TagEditBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="@color/manav"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MakeTagButton"
        android:layout_width="97dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Make"
        android:backgroundTint="@color/manav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TagNewValueInputBox" />

    <ToggleButton
        android:id="@+id/TagTypeToggle"
        android:layout_width="416dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/manav"
        android:text="ToggleButton"
        android:textOff="Person"
        android:textOn="Location"
        app:layout_constraintEnd_toEndOf="@+id/TagNewValueInputBox"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="@+id/TagNewValueInputBox"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TagNewValueInputBox"
        android:layout_width="354dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="TagValue"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>