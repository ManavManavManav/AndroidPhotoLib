<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6FF00"
    tools:context=".TagManagerActivity">

    <Button
        android:id="@+id/AddTagManagerButton"
        android:layout_width="264dp"
        android:layout_height="53dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="@color/manav"
        android:text="Add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TagManagerBackButton"
        android:layout_width="89dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="@color/manav"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/TagManagerListView"
        android:layout_width="377dp"
        android:layout_height="148dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/manav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Tag"
        android:layout_width="341dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:hint="Value"
        android:textAlignment="center"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/TagToggle"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TagToggle" />

    <ToggleButton
        android:id="@+id/TagToggle"
        android:layout_width="346dp"
        android:layout_height="51dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded"
        android:text="ToggleButton"
        android:textOff="Person"
        android:textOn="Location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>