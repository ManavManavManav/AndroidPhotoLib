<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6FF00"
    tools:context=".PhotoDisplayActivity">

    <TextView
        android:id="@+id/DisplayDateView"
        android:layout_width="161dp"
        android:layout_height="17dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/TagManagerButton"
        android:layout_width="381dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="324dp"
        android:backgroundTint="@color/manav"
        android:text="Manage Tags"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/junkCpButton"
        android:layout_width="117dp"
        android:layout_height="55dp"
        android:layout_marginStart="308dp"
        android:layout_marginTop="700dp"
        android:text="Copy Photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/junkViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="712dp"
        android:background="@drawable/rounded"
        android:text="Detail Image view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Caption"
        android:layout_width="161dp"
        android:layout_height="17dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/SlideShowStartButton"
        android:layout_width="124dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="372dp"
        android:backgroundTint="@color/manav"
        android:text="Slideshow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BackToPhotoListButton"
        android:layout_width="79dp"
        android:layout_height="38dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="372dp"
        android:backgroundTint="@color/manav"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MovePhotoButton"
        android:layout_width="117dp"
        android:layout_height="55dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="@color/manav"
        android:text="Move Photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/EditCaptionButton"
        android:layout_width="117dp"
        android:layout_height="55dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="@color/manav"
        android:text="Change Caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DeletePhotoButton"
        android:layout_width="117dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="@color/manav"
        android:text="Delete Photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/DisplayImageView"
        android:layout_width="399dp"
        android:layout_height="167dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="#000000"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/divider_horizontal_dim_dark" />

    <ListView
        android:id="@+id/TagDisplayScreenListView"
        android:layout_width="357dp"
        android:layout_height="104dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="208dp"
        android:background="@color/teal200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>